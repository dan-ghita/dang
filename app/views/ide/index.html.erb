<div class="container fill vert-offset-top-2">
  <div class="jumbotron fill" style="background-color: floralwhite">
    <div class="row height-60 col-sm-10 col-sm-offset-1">
      <textarea id="code-editor"></textarea>
    </div>
    <div class="row mt-10">
      <div class="col-sm-2 col-sm-offset-10">
        <button type="button" class="btn btn-success fill" id="run-code">
          <span class="glyphicon glyphicon-play"></span> Run
        </button>
      </div>
    </div>
    <div class="row height-60">
      <label class="col-sm-10 col-sm-offset-1" id="code-result">
      </label>
    </div>
  </div>
</div>
<script>
    var myTextarea = document.getElementById("code-editor")
    var editor = CodeMirror.fromTextArea(myTextarea, {
        lineNumbers: true,
        mode: "dang",
        theme: "icecoder"
    });
</script>